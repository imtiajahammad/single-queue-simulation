<br />

<form method="post" action="@Url.Action("HomeResult", "Home")">
    <table align="center">

        <tr align="center">
            <td align="center"><label>Number of customers you want to simulate:   </label></td>
            <td align="center"><input type="text" name="numberOfSimulation" /></td>
        </tr>
        <br />
        <br />
        <tr align="center">
            <td align="right" ><button type="submit">Click to start the simulation</button></td>
        </tr>
    </table>

</form>